<div class="card">
  <div style="overflow: auto; width: 100%;">
    <table id="example" class="table table-bordered">
      <thead>
        <tr>
          <th>顺号</th>
          <th>姓名</th>
          <th>工资号</th>
          <th>车间</th>
          <th>班组</th>
          <th>病假</th>
          <th>事假</th>
          <th>婚假</th>
          <th>产假</th>
          <th>探亲假天数</th>
          <th>丧假</th>
          <th>育儿假</th>
          <th>工伤假</th>
          <th>旷工</th>
          <th>陪产假</th>
          <th>备注</th>         
        </tr>
      </thead>
        <tbody data-behavior='sortable'>  
        <% @employees.each do |employee| %> 
	      <tr>
	        <td></td>
	        <td><%= employee.name %></td>
	        <td><%= employee.sal_number %></td>
	        <td><%= employee.workshop %></td>
	        <td><%= employee.group %></td> 
	      </tr>
        <% end %>
       </tbody>
    </table>
  </div>
</div>