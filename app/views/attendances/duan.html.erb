<div class="contentpanel">
  <div class="panel panel-default">
    <%= render "attendance_sidebar"%>
  </div>
  <div class="col-md-12">
    <%= form_tag filter_attendances_path, method: 'get' do %>
      <%= label_tag :请输入时间段搜索 %>
      <%= select_tag(:year, options_for_select(@years.collect{ |u| u }), {:required => "true"}) %> ~
      <%= select_tag(:month, options_for_select(@months.collect{ |u| u }), {:required => "true"}) %>
      <%= hidden_field_tag :type, "duan" %>
      <%= submit_tag :筛选 %>
    <% end %>
    <!-- <div class="ivu-tooltip-rel" style="text-align: right;">
      <button type="button" class="ivu-btn ivu-btn-primary2 btn-oaG3J_0">
        <%= link_to create_default_attendance_attendances_path, method: 'post' do  %>
           <span style="color: #269Eff;">新建下月考勤</span>
        <% end %>
      </button>
    </div> -->
  </div>


  <!-- 主体部分-开始 -->
  <div class="col-md-12" style="height: 100%">
    <!-- 组织结构树状图-开始 -->
    <% if @year.present? && @month.present? %>
      <h4><%= @year %>年<%= @month %>月考勤表</h4>
      <div class="col-md-2" id="menu" style="background-color: white;overflow: auto;height: 100%;">
        <h5><%= link_to "北京供电段", filter_attendances_path(type:"duan",duan: "北京供电段", month: @month, year: @year) %></h5>
        <ul>
          <% @workshops.each do |workshop| %>
            <li>
              <i class="fa fa-plus-square-o" aria-hidden="true" style= "margin-right: 10px;"></i><a style="color:red" href='/attendances/filter?type=duan&workshop=<%= workshop.id %>&month=<%= @month %>&year=<%= @year %>'><%= workshop.name %></a>
              <ul>
                <% groups = Group.current.where(:workshop_id => workshop.id) %>
                <% groups.each do |group| %>
                  <li><a style="color:green" href='/attendances/filter?type=duan&group=<%= group.id %>&month=<%= @month %>&year=<%= @year %>'><%= group.name %></a></li>
                <% end %>
              </ul>
            </li>
          <% end %>

        </ul><br>
      </div>
    <% else %>
      <h4><%= Time.now.year %>年<%= Time.now.month %>月考勤表</h4>
      <div class="col-md-2" id="menu" style="background-color: white;overflow: auto;height: 100%;">
        <h5><%= link_to "北京供电段", duan_attendances_path %></h5>
        <ul>
          <% @workshops.each do |workshop| %>
          <li>
            <i class="fa fa-plus-square-o" aria-hidden="true" style= "margin-right: 10px;"></i><a style="color:red" href='/attendances/duan?workshop=<%= workshop.id %>'><%= workshop.name %></a>
            <ul>
              <% groups = Group.current.where(:workshop_id => workshop.id) %>
              <% groups.each do |group| %>
                <li><a style="color:green" href='/attendances/duan?group=<%= group.id %>'><%= group.name %></a></li>
              <% end %>
            </ul>
          </li>
          <% end %>
        </ul><br>
      </div>
    <% end %>

    <!-- 组织结构树状图-结束 -->
    <!-- 表格-开始 -->
    <div class="card">
      <div style="overflow: auto;" class="col-md-10">
        <table id="example" class="table table-bordered">
          <thead>
            <tr>

                <th>姓名</th>
                <th>工资号</th>
                <th>车间</th>
                <th>班组</th>
              <% @vacation_name_hash.values.each do |name| %>
                <th><%= name %></th>
              <% end %>
              <th>修改次数</th>
            </tr>
          </thead>
             <tbody data-behavior='sortable'>

                <% @employees.each do |employee| %>
                  <% if (@year.nil? && @month.nil?) or (@year.to_i == Time.now.year && @month.to_i == Time.now.month) %>
                    <% attendance_count = AttendanceCount.find_by(:employee_id => employee.id, month: Time.now.month, year: Time.now.year)%>
                  <% else %>
                    <% attendance_count = AttendanceCount.find_by(:employee_id => employee.id, month: @month, year: @year)%>
                  <% end %>
                  <tr>
                    <td><%= employee.name %></td>
                    <td><%= employee.sal_number %></td>
                    <td><%= Workshop.find(employee.workshop).name %></td>
                    <td><%= Group.find(employee.group).name %></td>
                    <% @vacation_name_hash.keys.each do |code| %>
                      <% if attendance_count.present? %>
                        <% if attendance_count.attributes[code] == 0%>
                          <td></td>
                        <% else %>
                          <td><%= attendance_count.attributes[code]%></td>
                        <% end %>
                      <% else %>
                       <td></td>
                      <% end %>
                    <% end %>
                    <% if (@year.nil? && @month.nil?) or (@year.to_i == Time.now.year && @month.to_i == Time.now.month) %>
                      <% if Attendance.find_by(:employee_id => employee.id, :month => Time.now.month, :year => Time.now.year).present? %>
                        <td><%= link_to AttendanceRecord.where(:attendance_id => Attendance.find_by(:employee_id => employee.id, :month => Time.now.month, :year => Time.now.year).id).count, show_record_attendances_path(employee: employee, month: Time.now.month, year: Time.now.year) , class: 'btn btn-primary2'%></td>
                      <% else %>
                        <td>0</td>
                      <% end %>
                    <% else %>
                      <% if Attendance.find_by(:employee_id => employee.id, :month => @month, :year => @year).present? %>
                        <td><%= link_to AttendanceRecord.where(:attendance_id => Attendance.find_by(:employee_id => employee.id, :month => @month, :year => @year).id).count, show_record_attendances_path(employee: employee, month: @month, year: @year), class: 'btn btn-primary2' %></td>
                      <% else %>
                        <td>0</td>
                      <% end %>
                    <% end %>
                  </tr>
                <% end %>

             </tbody>
        </table>
      </div>
    </div>
    <!-- 表格-结束 -->
  </div>
  <!-- 主体部分-结束 -->
  <!-- 进度条引用的库-开始 -->
