<%= render 'annual_holiday_sidebar' %>
<% if (current_user.has_role? :attendance_admin) or  (current_user.has_role? :superadmin) %>
	<div class="card">
		    <div style="overflow: auto;" class="col-md-10">
		      <table id="example" class="table table-bordered">
		        <thead>
		        	<tr>
		        		<th>工种</th>
		        		<% (1..12).each do |i| %>
		        			<th><%= i %>月份安排人数</th>
		        			<th><%= i %>月份休假天数</th>
		        		<% end %>
		        	</tr>
		        </thead>
		        <tbody>  	
	        		<% AnnualHolidayWorkType.all.each do |type| %>
	        			<tr>
	        				<td><%= type.work_type %></td>
	        			</tr>
	        		<% end %>
	        	</tbody>
	        </table>
	    </div>
	</div>
<% end %>