                        </tr>
                        <tr>
                          <td>16-20年</td>
                          <% n = 0 %>
                          <% @rali_16_bar.each do |i| %>
                            <td><%= link_to i, statistical_analysis_data_employees_path(:rali_years => "16-20年", data_source: @data_source, workshop: @workshops[n]), style: "color: black" %></td>
                            <% n = n+1 %>
                          <% end %>
                        </tr>
                        <tr>
                          <td>21-25年</td>
                          <% n = 0 %>
                          <% @rali_21_bar.each do |i| %>
                            <td><%= link_to i, statistical_analysis_data_employees_path(:rali_years => "21-25年", data_source: @data_source, workshop: @workshops[n]), style: "color: black" %></td>
                            <% n = n+1 %>
                          <% end %>
                        </tr>
                        <tr>
                          <td>26-30年</td>
                          <% n = 0 %>
                          <% @rali_26_bar.each do |i| %>
                            <td><%= link_to i, statistical_analysis_data_employees_path(:rali_years => "26-30年", data_source: @data_source, workshop: @workshops[n]), style: "color: black" %></td>
                            <% n = n+1 %>
                          <% end %>
                        </tr>
                        <tr>
                          <td>31-35年</td>
                          <% n = 0 %>
                          <% @rali_31_bar.each do |i| %>
                            <td><%= link_to i, statistical_analysis_data_employees_path(:rali_years => "31-35年", data_source: @data_source, workshop: @workshops[n]), style: "color: black" %></td>
                            <% n = n+1 %>
                          <% end %>
                        </tr>
                        <tr>
                          <td>36年以上</td>
                          <% n = 0 %>
                          <% @rali_36_up_bar.each do |i| %>
                            <td><%= link_to i, statistical_analysis_data_employees_path(:rali_years => "36年以上", data_source: @data_source, workshop: @workshops[n]), style: "color: black" %></td>
                            <% n = n+1 %>
                          <% end %>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
            </div>
          </div>


     </div>
    </div>
  </div>


