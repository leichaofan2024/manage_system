<script type="text/javascript">
  $(document).ready(function () {
      $(function() {
        $('tr.parent')
              .css("cursor","pointer")
              .attr("title","点击这里展开/关闭")
              .click(function(){
                $(this).siblings('.child-'+ this.id).toggle();
              });
            });
})
</script>
