  <script>
    var chart6 = $(function () {
      $('#container6').highcharts({
        chart: {
          type: 'bar'
        },
        title: {
          text: '工龄分析'
        },
        xAxis: {
          lables: {
            step: 1
          },
          categories: gon.bar_workshop
