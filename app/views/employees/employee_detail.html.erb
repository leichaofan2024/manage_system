<%= render "employee_navbar"%>
<div class="card" style="margin-top: 20px;">
  <div style="overflow: auto; width: 100%;">
    <table id="example" class="table table-bordered">
      <thead>
      	<tr>
      		<th>工资号</th>
      		<th>姓名</th>
      		<% if @type == "调离" %>
	      	  <th>原车间</th>
	      	  <th>原班组</th>
	      	  <th>调离时间</th>
	      	<% elsif @type == "调动" %>
	      	  <th>调动前车间</th>
	      	  <th>调动前班组</th>
	      	  <th>调动后车间</th>
	      	  <th>调动后班组</th>
	      	  <th>调动时间</th>
	      	<% end %>
      	</tr>
      </thead>
      <tbody>
      	<% @employees.each do |employee| %>
	      	<tr class="row-click-able" data-url="/employees/<%= employee.id%>">
	      		<td><%= employee.sal_number %></td>
	      		<td><%= employee.name %></td>
	      		<% if @type == "调离" %>
					<td><%= Workshop.find(employee.workshop).name %></td>
					<td><%= Group.find(employee.group).name %></td>
					<td><%= LeavingEmployee.find_by(employee_id: employee.id).created_at %></td>
		      	<% elsif @type == "调动" %>
					<td><%= Workshop.find(LeavingEmployee.find_by(employee_id: employee.id).transfer_from_workshop).name %></td>
					<td><%= Group.find(LeavingEmployee.find_by(employee_id: employee.id).transfer_from_group).name %></td>
					<td><%= Workshop.find(LeavingEmployee.find_by(employee_id: employee.id).transfer_to_workshop).name %></td>
					<td><%= Group.find(LeavingEmployee.find_by(employee_id: employee.id).transfer_to_group).name %></td>
					<td><%= LeavingEmployee.find_by(employee_id: employee.id).created_at %></td>
		      	<% end %>
	      	</tr>
      	<% end %>
      </tbody>
  	</table>
  </div>
</div>