<div class="widget-content-container" style="margin-bottom: 10px;">
  <div class="mark-contend"></div>
   <div class="widget-topbar" style="cursor: auto;">
     <div class="widget-title">
       <div class="title" data-method="nav" style="margin-top: 10px;">
          各车间年龄分析表格 (共<%= @workshops.count%>个-含机关)
       </div>
       <div class="range" style="margin-bottom: 0px;">
         <%= Time.now.strftime(("%Y年%m月%d日") )%>
       </div>
     </div>
     <div class="pull-right widget-setting">
       <div class="customer-menu"></div>
     </div>
   </div>

   <div class="widget-chart-container container">
     <div style="background-color: white; height: 354px;padding-left:10px; padding-right: 10px; padding-top:30px ;overflow: auto">
       <table id="example" class="table table-bordered">
         <thead>
           <tr>
             <th>车间</th>
             <th>25岁以下</th>
             <th>26-30岁</th>
             <th>31-35岁</th>
             <th>36-40岁</th>
             <th>41-45岁</th>
             <th>46-50岁</th>
             <th>51-55岁</th>
             <th>56岁以上</th>
           </tr>
         </thead>
          <tbody>
           <% @workshops.each do |workshop| %>
             <tr>
               <td><%= Workshop.current.find(workshop.to_i).name %></td>
               <td><%= Employee.current.where(:workshop => workshop, age: 0..25).count %></td>
               <td><%= Employee.current.where(:workshop => workshop, age: 26..30).count %></td>
               <td><%= Employee.current.where(:workshop => workshop, age: 31..35).count %></td>
               <td><%= Employee.current.where(:workshop => workshop, age: 36..40).count %></td>
               <td><%= Employee.current.where(:workshop => workshop, age: 41..45).count %></td>
               <td><%= Employee.current.where(:workshop => workshop, age: 46..50).count %></td>
               <td><%= Employee.current.where(:workshop => workshop, age: 51..55).count %></td>
               <td><%= Employee.current.where(:workshop => workshop, age: 56..1000).count %></td>
             </tr>
           <% end %>
        </tbody>
       </table>
     </div>
  </div>
</div>
