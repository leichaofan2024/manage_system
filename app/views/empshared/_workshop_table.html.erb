<div class="col-md-12" style="height: 100%; margin-top:20px;">
  <div class="col-md-2" id="menu" style="background-color: white;overflow: auto;height: 100%;">
    <% workshop = Workshop.current.find_by(name: current_user.name) %>
    <h5><a href='/employees/filter?workshop=<%= workshop.id %>'><%= workshop.name %></a></h5>
    <ul>
      <% workshop.groups.each do |group| %>
        <li><a href='/employees/filter?group=<%= group.id %>'><%= group.name %></a></li>
      <% end %>
    </ul>
  </div>

  <div class="card">
    <div class="col-md-10" style="overflow: auto">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>工资号</th>
            <th>工号</th>
            <th>档案号</th>
            <th>车间</th>
            <th>班组</th>
            <th>姓名</th>
            <th>性别</th>
            <th>年龄</th>
            <th>文化程度</th>
            <th>民族</th>
            <th>籍贯</th>
            <th>工作时间</th>
            <th>工龄</th>
            <th>入路时间</th>
            <th>路龄</th>
            <th>户口所在地</th>
            <th>家庭住址</th>
            <th>联系电话</th>
          </tr>
        </thead>
        <tbody>

          <% @employees.each do |employee| %>
              <tr class="row-click-able" data-url="/employees/<%= employee.id%>">
              <td><%= employee.sal_number %></td>
              <td><%= employee.job_number %></td>
              <td><%= employee.record_number %></td>
              <td><%= Workshop.current.find(employee.workshop).name %></td>
              <td><%= Group.current.find(employee.group).name %></td>
              <td><%= employee.name %></td>
              <td><%= employee.sex %></td>
              <td><%= employee.age %></td>
              <td><%= employee.education_background %></td>
              <td><%= employee.nation %></td>
              <td><%= employee.native_place %></td>
              <td><%= employee.working_time %></td>
              <td><%= employee.working_years %></td>
              <td><%= employee.railway_time %></td>
              <td><%= employee.rali_years %></td>
              <td><%= employee.registered_residence %></td>
              <td><%= employee.family_address%></td>
              <td><%= employee.phone_number %></td>
            </tr>
          <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>
