<div class="col-md-12 ">
  <h4 class="collection search-count text-left">已为您找到<%= @employees.count %>个人</h4>
  <table id="example" class="table table-bordered table-striped">
     <thead>
      <tr>
        <th>车间</th>
        <th>班组</th>
        <th>工号</th>
        <th>姓名</th>
        <% if (!current_user.has_role? :groupadmin) && (!current_user.has_role? :organsadmin) %>
          <th>电话号</th>
        <% end %>
        <th>性别</th>
        <th>年龄</th>
        <th>文化程度</th>
        <th>民族</th>
        <th>籍贯</th>
      </tr>
     </thead>
     <tbody data-behavior='sortable'>
        <% @employees.each do |employee| %>
          <tr class="row-click-able" data-url="/employees/<%= employee.id%>">
            <td><%= Workshop.current.find(employee.workshop).name %></td>
            <td><%= Group.current.find(employee.group).name %></td>
            <td><%= employee.job_number %></td>
            <td><%= employee.name %></td>
            <% if (!current_user.has_role? :groupadmin) && (!current_user.has_role? :organsadmin) %>
              <td><%= employee.phone_number %></td>
            <% end %>
            <td><%= employee.sex %></td>
            <td><%= employee.age %></td>
            <td><%= employee.education_background %></td>
            <td><%= employee.nation %></td>
            <td><%= employee.native_place %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>
