<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
      <h3 class="text-center">北京供电段管理系统</h3>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :name, :label => false, placeholder: "用户名", required: true, autofocus: true %>
            <%= f.input :password, :label => false, placeholder: "密码",required: false %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "登录", class: "button"%>
          </div>
        <% end %>
      <hr />
    </div>
  </div>
</div>
