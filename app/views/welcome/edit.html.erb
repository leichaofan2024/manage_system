<div class="well">
  <%= form_tag update_password_path, method: :put, class: "form-horizontal" %>
    <div class="form-group">
      <%= label_tag :user_name, '用户名', class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= text_field_tag :user_name, nil, required: true, class: " form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :password, "新密码", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= text_field_tag :password, nil, required: true, class: 'form-control' %>
      </div>
    </div>

    <%= submit_tag '重置', data: {disable_with: "提交中... "}, class: "btn btn-primary pull-right" %>
</div>