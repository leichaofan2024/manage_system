<%= render 'relative_salers/saler_navbar'%>

<div class="head-btn col-md-12">
  <div class="back-btn">
    <%= link_to "返回", charge_details_path %>
  </div>

  <div class="col-md-6">
    <h4 style="text-align: left; margin-left: -15px;">2018年7月 抽考扣款明细表</h4>
  </div>
  <%= link_to "上传抽考扣款明细表", new_examination_charge_path, class: 'btn btn-primary-upload'%>
</div>

<div class="col-md-12">

  <div class="card">
    <div style="overflow: auto; width: 100%;">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>序号</th>
            <th>工资编号</th>
            <th>车间</th>
            <th>姓名</th>
            <th>金额</th>
            <th>签字</th>
          </tr>
        </thead>
        <tbody>
          <% @examination_charges.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.工资编号 %></td>
              <td><%= item.车间 %></td>
              <td><%= item.姓名 %></td>
              <td><%= item.金额 %></td>
              <td><%= item.签字 %></td>
            </tr>
          <% end %>
       </tbody>
      </table>
    </div>
  </div>

  <%= form_tag import_examination_charges_path, multipart: true do %>
    <%= file_field_tag :file%>
    <%= submit_tag "上传"%>
  <% end %>

</div>
